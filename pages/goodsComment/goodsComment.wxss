/* pages/goodsComment/goodsComment.wxss */

/* 商品区 */
.goods{
  position: relative;
  width: 100%;
  display: inline-block;
  padding-bottom: 10rpx;
  height: 200rpx;
  border-bottom: 20rpx solid #eee;
}

/* 商品图片 */
.img {
  position: absolute;
  width:144rpx;
  height: 144rpx;
  left: 20rpx;
  top: 30rpx; 
}

/* 商品名称 */
.name {
  position: absolute;
  top: 25rpx;
  left: 200rpx;
  color: #333333;
  width: 60%;
  font-size: 35rpx;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;    
  overflow: hidden;
}

/* 输入框 */
.input {
  width: 90%;
  height: 200rpx;
  background-color: white;
  font-size: 30rpx;
  margin-left: 35rpx;
  margin-top: 20rpx;
  color: #98989f;
  border: 3rpx solid black; 
  border-radius: 40rpx;
}

/* 提交按钮 */
.button {
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.submitBtn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 70px;
  color: #FF3030;
  background-color:white;
  border: 3rpx solid #FF3030;
  border-radius: 40rpx;
}