/* pages/myOrder/myOrder.wxss */
.container {
  background-color: #EBEBEB;
}
/* 全部 */
.orderList{
  padding-top: 6rpx;
  position: relative;
  width: 100%;
  border-bottom: 20rpx solid #eee;
  background-color:#fff;
}
/* 订单头部 */
.head{
  position: relative;
  display: inline-block;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #D4D4D4;
}
/* 订单商家名称 */
.shopName {
  position: absolute;
  font-size: 30rpx;
  font-weight: bold;
  color: black;
  left: 20rpx;
}

/* 订单状态 */
.status {
  position: absolute;
  right: 20rpx;
  color: #999;
  font-size: 30rpx;
}
 
/* 商品列表区 */
.goodsList{
  position: relative;
  width: 100%;
  display: inline-block;
  padding-bottom: 10rpx;
  height: 200rpx;
  border-bottom: 1rpx solid #ccc;
}
/* 列表图片 */
.list_img{
  position: absolute;
  width:144rpx;
  height: 144rpx;
  left: 20rpx;
  top: 30rpx; 
}
/* 列表名称 */
.list_name{
  position: absolute;
  top: 25rpx;
  left: 200rpx;
  color: #333333;
  width: 60%;
  font-size: 30rpx;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;    
  overflow: hidden;
}
/* 列表价格 */
.list_price{
  position: absolute;
  color: #FF6666;
  font-size: 30rpx;
  left: 195rpx;
  bottom: 35rpx;
}

/* 列表数量 */
.list_amount {
  position: absolute;
  font-size: 30rpx;
  color: gray;
  right: 20rpx;
  bottom: 35rpx;
}
/* 订单底部区 */
.bottom{
  position: relative;
  width: 100%;
  height: 70rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #EBEBEB;
}
/* 底部信息 */
.bottom_center{
  position: relative;
  width: 100%;
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
}
/* 订单商品数量 */
.amount{
  position: relative;
  font-size: 30rpx;
  top: -15rpx;
  float: left;
  left: 350rpx;
}
/* 总计金额 */
.totalPrice{
  position: relative;
  font-size: 30rpx;
  top: -15rpx;
  float: right;
  right: 20rpx;
}
/* 底部按钮区 */
.button{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 150rpx;
  background-color:  #fff;
} 
/* 取消订单按钮 */
.cancelBtn{
  position: absolute;
  top: 12rpx;
  color: black;
  right: 215rpx;
  display: inline-block;
  width: 170rpx;
  height: 55rpx;
  text-align: center;
  font-weight: bold;
  border: 3rpx black solid; 
  border-radius: 15rpx;
  font-size: 30rpx;
  line-height: 57rpx;
}
/* 确认收货按钮 */
.checkBtn{
  position: absolute;
  top: 12rpx;
  color: #FF3030;
  right: 20rpx;
  display: inline-block;
  width: 170rpx;
  height: 55rpx;
  text-align: center;
  font-weight: bold;
  border: 3rpx #FF3030 solid; 
  border-radius: 15rpx;
  font-size: 30rpx;
  line-height: 57rpx;
}
/* 无订单数据样式 */
.text view {
  margin-top: 100rpx;
  background-color: white;
  text-align: center;
  color: black;
  font-size: 30rpx;
}
