/* pages/orderDetail/orderDetail.wxss */
/* 订单状态 */
.orderStatus {
  width: 100%;
  height: 100rpx;
  border-bottom: 20rpx solid #eee;
}
/* 状态图标 */
.orderStatus icon{
  position: absolute;
  left: 20rpx;
  top: 30rpx;
}
/* 状态文字信息 */
.orderStatus text {
  position: absolute;
  left: 75rpx;
  top: 27rpx;
  font-size: 35rpx;
  font-weight: bold;
}
/* 收货人信息 */
.receiver {
  width: 100%;
  height: 150rpx;
  border-bottom: 20rpx solid #eee;
}
/* 地址图标 */
.receiver image {
  position: absolute;
  left: 20rpx;
  top: 170rpx;
  width: 40rpx;
  height: 40rpx;
}
/* 收货人姓名 */
.name {
  font-size: 30rpx;
  display: inline-block;
  position: absolute;
  left: 75rpx;
  top: 150rpx;
}
/* 收货人手机号 */
.phone {
  font-size: 30rpx;
  display: inline-block;
  position: absolute;
  left: 170rpx;
  top: 150rpx;
}
/* 收货人地址 */
.address {
  font-size: 30rpx;
  display: inline-block;
  color: gray;
  position: absolute;
  left: 75rpx;
  top: 200rpx;
}
/* 店铺商品详情 */
.shopDetail {
  width: 100%;
}
.shopHead {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
}
/* 店铺名 */
.shopName {
  font-size: 35rpx;
  font-weight: bold;
  position: absolute;
  left: 20rpx;
  top: 315rpx;
}
/* 商品总数 */
.amount {
  font-size: 30rpx;
  color: gray;
  position: absolute;
  right: 20rpx;
  top: 317rpx;
}
/* 商品列表 */
.goodsList{
  position: relative;
  width: 100%;
  display: inline-block;
  padding-bottom: 10rpx;
  height: 200rpx;
  border-bottom: 1rpx solid #ccc;
}

.goods{
  width: 100%;
  height: 200rpx;
}
/* 列表图片 */
.list_img{
  position: absolute;
  width:144rpx;
  height: 144rpx;
  left: 20rpx;
  top: 30rpx; 
}
/* 列表名称 */
.list_name{
  position: absolute;
  top: 25rpx;
  left: 200rpx;
  color: #333333;
  width: 60%;
  font-size: 30rpx;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;    
  overflow: hidden;
}
/* 列表价格 */
.list_price{
  position: absolute;
  color: #FF6666;
  font-size: 30rpx;
  left: 195rpx;
  bottom: 35rpx;
}
/* 列表数量 */
.list_amount {
  position: absolute;
  font-size: 30rpx;
  color: gray;
  right: 20rpx;
  bottom: 35rpx;
}
/* 分离区 */
.separate {
  border-bottom: 20rpx solid #eee;
  margin-top: -10rpx;
  width: 100%;
}
/* 订单详情 */
.orderDetail {
  width: 100%;
  height: 200rpx;
}
/* 订单数量 */
.orderNum {
  position: relative;
  width: 80%;
  font-size: 30rpx;
  display: inline-block;
  left: 20rpx;
  top: 50rpx;
}
/* 订单创建时间 */
.orderCreateTime {
  position: relative;
  width: 80%;
  font-size: 30rpx;
  display: inline-block;
  left: 20rpx;
  top: 70rpx;
}
/* 订单商品总数 */
.orderTotalAmount {
  position: relative;
  width: 80%;
  font-size: 30rpx;
  display: inline-block;
  left: 20rpx;
  top: 90rpx;
}

/* 去评价按钮 */
.button {
  width: 100%;
  height: 80rpx;
  position: fixed;
  background-color: red;
  text-align: center;
  bottom: 0rpx;
  right: 0rpx;
}

/* 按钮文字 */
.comment {
  font-size: 30rpx;
  text-decoration: none;
  display: inline-block;
  width: 50%;
  height: 80rpx;
  line-height: 85rpx;
  color: white;
  font-weight: bold;
}